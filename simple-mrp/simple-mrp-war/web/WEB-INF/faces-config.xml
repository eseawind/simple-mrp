<?xml version='1.0' encoding='UTF-8'?>

<!-- =========== FULL CONFIGURATION FILE ================================== -->

<faces-config version="1.2" 
    xmlns="http://java.sun.com/xml/ns/javaee" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">

    <application>
        <locale-config>
            <default-locale>en</default-locale>
        </locale-config>
        <view-handler>com.sun.facelets.FaceletViewHandler</view-handler>
    </application>
    
    <managed-bean>
        <description>UserName Bean</description>
        <managed-bean-name>user</managed-bean-name>
        <managed-bean-class>demo.User</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>name</property-name>
            <property-class>java.lang.String</property-class>
            <value/>
        </managed-property>
    </managed-bean>
    
    <managed-bean>
        <managed-bean-name>customerBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.co.CustomerBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>salemanBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.co.SalemanBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>coBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.co.CoBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>itemBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.master.ItemBean</managed-bean-class>

        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>constantBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.ConstantBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>poBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.po.PurchaseOrderBean</managed-bean-class>

        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>prBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.po.PurchaseRequisitionBean</managed-bean-class>

        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>coShipBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.ic.CustOrderShippingBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>poRecvBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.ic.PoReceiveBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>itemLocBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.ic.ItemLocationBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>matlToJobBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.ic.MatlToJobBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>forecastDemandBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.pp.ForecastDemandBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>mpsBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.pp.MasterPlanScheduleBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>jobOrderBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.pp.JobOrderBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>coitemBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.co.CoitemBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
        <managed-property>
            <property-name>p_coId</property-name>
            <value>#{param.p_coId}</value>
        </managed-property>
        <managed-property>
            <property-name>p_coSeq</property-name>
            <value>#{param.p_coSeq}</value>
        </managed-property>
        <managed-property>
            <property-name>p_mode</property-name>
            <value>#{param.p_mode}</value>
        </managed-property>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>uomBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.master.UomBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
     <managed-bean>
        <managed-bean-name>productBean</managed-bean-name>
        <managed-bean-class>simplemrp.mbean.master.ProductBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
</faces-config>
